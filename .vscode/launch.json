{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug Server",
            "cargo": {
                "args": ["build", "-p", "gauss-server"],
                "filter": {
                    "name": "gauss-server",
                    "kind": "bin"
                }
            },
            "env": {
                "RUST_LOG": "debug"
            },
            "args": ["serve", "--config", "config.debug.toml"],
            "cwd": "${workspaceFolder}"
        }
    ]
}
