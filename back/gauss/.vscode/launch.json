{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "react",
      // –∏—Å–ø–æ–ª—å–∑—É–µ–º –∑–∞–ø—É—Å–∫ node –∞ –Ω–µ chrome
      "type": "node",
      "request": "launch",
      "sourceMaps": true,
      // –∫–∞–∫—É—é –ø—Ä–æ–≥—Ä–∞–º–º—É –∑–∞–ø—É—Å–∫–∞–µ–º
      // pnpm run dev --host 0.0.0.0 --port 8001
      "runtimeExecutable": "pnpm",
      "args": ["run", "dev", "--host", "0.0.0.0", "--port", "8001"],
      // workdirectory –ø—Ä–æ—Ü–µ—Å—Å–∞ vite
      "cwd": "${workspaceFolder}/front/web",
      "console": "integratedTerminal",
      "serverReadyAction": {
        // –∑–∞–ø—É—Å–∫–∞–µ–º –±—Ä–∞—É–∑–µ—Ä –ø–æ—Å–ª–µ —Ç–æ–≥–æ –∫–∞–∫ –ø–æ—è–≤–∏—Ç—å—Å—è "ready in" –≤ –ª–æ–≥–∞—Ö
        "pattern": "ready in",
        // –∫–∞–∫—É—é —Å—Ç—Ä–∞–Ω–∏—Ü—É –æ—Ç–∫—Ä—ã—Ç—å
        "uriFormat": "http://localhost:8001",
        "action": "debugWithChrome",
        // // –ø—É—Ç—å –∫ –∏—Å—Ö–æ–¥–Ω–∏–∫–∞–º react
        "webRoot": "${workspaceFolder}/front/web/src",
        // —É–±–∏–≤–∞–µ–º —é—Ä–∞—É–∑–µ—Ä –ø–æ—Å–ª–µ –∑–∞–≤–µ—Ä—à–µ–Ω–∏—è
        "killOnServerStop": false
      },
      "env": {
        // "DEBUG": "vite:*"
      }
    },
    {
      "name": "http",
      "type": "debugpy",
      "request": "launch",
      "console": "integratedTerminal",
      "python": "/usr/local/bin/python3",
      "cwd": "/home",
      "justMyCode": false,
      "autoStartBrowser": false,
      "program": "${workspaceFolder}/back/server/http_worker/main.py",
      "args": [
        "--uvicorn.addr",
        "0.0.0.0",
        "--uvicorn.port",
        "8000",
        "--uvicorn.log_level",
        "debug",
        "--uvicorn.access_log",
        "true",
        "--fastapi.host",
        "localhost",
        "--fastapi.port",
        "8000",
        "--fastapi.websocket.host",
        "localhost",
        "--fastapi.websocket.port",
        "9000",
        "--fastapi.request_log",
        "true",
        "--fastapi.request_body_log",
        "true",
        "--fastapi.cors.allow_methods",
        "*",
        "--fastapi.cors.allowed_origins",
        "http://localhost:8000,http://localhost:8001,http://localhost:8002,http://localhost:9000"
      ]
    },
    {
      "name": "websocket",
      "type": "debugpy",
      "request": "launch",
      "justMyCode": false,
      "console": "integratedTerminal",
      "python": "/usr/local/bin/python3",
      "cwd": "/home",
      "program": "${workspaceFolder}/back/server/websocket_worker/main.py",
      "args": [
        "--addr",
        "0.0.0.0",
        "--port",
        "9000",
        "--ping_interval",
        "500",
        "--ping_timeout",
        "300",
        "--log_level",
        "debug"
      ],
      "env": {
        // "PYTHONASYNCIODEBUG": "false"
      }
    },
    {
      "name": "python current file",
      "type": "debugpy",
      "request": "launch",
      "console": "integratedTerminal",
      "python": "/usr/local/bin/python3",
      "cwd": "/home",
      "justMyCode": false,
      "program": "${file}"
    },
    {
      "name": "üß™ Debug Pytest (all tests)",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "justMyCode": false,
      "console": "integratedTerminal",
      "args": [
        "-s", // –≤—ã–≤–æ–¥ –≤ –∫–æ–Ω—Å–æ–ª—å
        "-v", // –ø–æ–¥—Ä–æ–±–Ω—ã–π –≤—ã–≤–æ–¥
        "tests" // –ø–∞–ø–∫–∞ —Å —Ç–µ—Å—Ç–∞–º–∏
      ],
      "env": {
        "PYTHONPATH": "${workspaceFolder}/back"
      },
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "üß© Debug Single Test File",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "justMyCode": false,
      "console": "integratedTerminal",
      "args": [
        "-s",
        "-v",
        "${file}" // –∑–∞–ø—É—Å–∫–∞–µ—Ç —Ç–µ—Å—Ç—ã –≤ —Ç–µ–∫—É—â–µ–º –æ—Ç–∫—Ä—ã—Ç–æ–º —Ñ–∞–π–ª–µ
      ],
      "env": {
        "PYTHONPATH": "${workspaceFolder}/back"
      },
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "üêû Debug Specific Test Function",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "justMyCode": false,
      "console": "integratedTerminal",
      "args": [
        "-s",
        "-v",
        "${file}::${selectedText}" // –≤—ã–¥–µ–ª—è–µ—à—å –∏–º—è —Ç–µ—Å—Ç–∞ –∏ –∂–º—ë—à—å F5
      ],
      "env": {
        "PYTHONPATH": "${workspaceFolder}/back"
      },
      "cwd": "${workspaceFolder}"
    }
  ]
}
