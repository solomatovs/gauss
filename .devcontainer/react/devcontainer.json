{
  "name": "react",
  "image": "mcr.microsoft.com/playwright:v1.49.0-jammy",
  "workspaceFolder": "/app",

  "mounts": [
    "source=${localWorkspaceFolder}/.git,target=${containerWorkspaceFolder}/.git,type=bind",
    "source=${localWorkspaceFolder}/.gitignore,target=${containerWorkspaceFolder}/.gitignore,type=bind",
    "source=${localWorkspaceFolder}/front/package.json,target=${containerWorkspaceFolder}/front/package.json,type=bind",
    "source=${localWorkspaceFolder}/front/pnpm-workspace.yaml,target=${containerWorkspaceFolder}/front/pnpm-workspace.yaml,type=bind",
    "source=${localWorkspaceFolder}/front/pnpm-lock.yaml,target=${containerWorkspaceFolder}/front/pnpm-lock.yaml,type=bind",
    "source=${localWorkspaceFolder}/front/web,target=${containerWorkspaceFolder}/front/web,type=bind",
    "source=${localWorkspaceFolder}/back/pyproject.toml,target=${containerWorkspaceFolder}/back/pyproject.toml,type=bind",
    "source=${localWorkspaceFolder}/back/server,target=${containerWorkspaceFolder}/back/server,type=bind",
    "source=${localWorkspaceFolder}/.vscode,target=${containerWorkspaceFolder}/.vscode,type=bind",
    "source=${localWorkspaceFolder}/.devcontainer,target=${containerWorkspaceFolder}/.devcontainer,type=bind"
  ],

  "postCreateCommand": "apt-get update && apt-get -y install libnss3 libatk-bridge2.0-0 libdrm-dev libxkbcommon-dev libgbm-dev libasound-dev libatspi2.0-0 libxshmfence-dev net-tools dnsutils lsof && npm install -g pnpm@latest && cd ${containerWorkspaceFolder}/front && pnpm install --no-frozen-lockfile",

  "waitFor": "postCreateCommand",
  "shutdownAction": "stopContainer",

  "runArgs": ["--network", "gauss", "--name", "react"],
  "forwardPorts": [8001],
  "portsAttributes": {
    "8001": { "label": "react web dev", "onAutoForward": "openBrowser" }
  },

  "hostRequirements": {
    "cpus": 1,
    "memory": "2gb",
    "storage": "2gb"
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "dracula-theme.theme-dracula",
        "formulahendry.auto-rename-tag",
        "naumovs.color-highlight",
        "intellsmi.comment-translate"
      ]
    }
  }
}
