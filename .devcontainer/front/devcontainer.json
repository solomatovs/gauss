{
  "name": "front",
  "image": "mcr.microsoft.com/playwright:v1.49.0-jammy",
  "workspaceFolder": "/app",

  "mounts": [
    "source=${localWorkspaceFolder}/.git,target=${containerWorkspaceFolder}/.git,type=bind",
    "source=${localWorkspaceFolder}/.gitignore,target=${containerWorkspaceFolder}/.gitignore,type=bind",
    "source=${localWorkspaceFolder}/back,target=${containerWorkspaceFolder}/back,type=bind",
    "source=${localWorkspaceFolder}/front,target=${containerWorkspaceFolder}/front,type=bind",
    "source=${localWorkspaceFolder}/.vscode,target=${containerWorkspaceFolder}/.vscode,type=bind",
    "source=${localWorkspaceFolder}/.devcontainer,target=${containerWorkspaceFolder}/.devcontainer,type=bind"
  ],
  "postCreateCommand": "export DEBIAN_FRONTEND=noninteractive && apt update && apt -y install libnss3 libatk-bridge2.0-0 libdrm-dev libxkbcommon-dev libgbm-dev libasound-dev libatspi2.0-0 libxshmfence-dev net-tools dnsutils telnet lsof make && npm install -g pnpm@latest && cd ${containerWorkspaceFolder}/front && pnpm install --no-frozen-lockfile",
  "waitFor": "postCreateCommand",
  "shutdownAction": "stopContainer",

  "runArgs": ["--network", "gauss", "--name", "front"],
  "forwardPorts": [8001],
  "portsAttributes": {
    "8001": { "label": "front", "onAutoForward": "openBrowser" }
  },

  "hostRequirements": {
    "cpus": 1,
    "memory": "2gb",
    "storage": "2gb"
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "dracula-theme.theme-dracula",
        "formulahendry.auto-rename-tag",
        "naumovs.color-highlight",
        "intellsmi.comment-translate",
        "Continue.continue"
      ]
    }
  }
}
