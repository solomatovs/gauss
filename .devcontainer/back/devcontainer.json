{
  "name": "back",
  "image": "python:3.11",
  "workspaceFolder": "/app/back",

  "mounts": [
    "source=${localWorkspaceFolder}/back/pyproject.toml,target=${containerWorkspaceFolder}/pyproject.toml,type=bind",
    "source=${localWorkspaceFolder}/back/server,target=${containerWorkspaceFolder}/server,type=bind",
    "source=${localWorkspaceFolder}/.devcontainer/back/settings.json,target=${containerWorkspaceFolder}/.vscode/settings.json,type=bind",
    "source=${localWorkspaceFolder}/.devcontainer/back/launch.json,target=${containerWorkspaceFolder}/.vscode/launch.json,type=bind"
  ],

  "containerEnv": {
    "PYTHONPATH": "${containerWorkspaceFolder}"
  },

  "postCreateCommand": "apt update && apt install -y net-tools dnsutils telnet && pip install .[dev] debugpy build",
  "waitFor": "postCreateCommand",
  "shutdownAction": "stopContainer",

  "runArgs": ["--network", "gauss", "--name", "back"],
  "forwardPorts": [8000],
  "portsAttributes": {
    "8000": { "label": "back", "onAutoForward": "openBrowser" }
  },

  "hostRequirements": {
    "cpus": 1,
    "memory": "2gb",
    "storage": "2gb"
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.debugpy",
        "charliermarsh.ruff",
        "dracula-theme.theme-dracula",
        "ms-vscode.extension-test-runner",
        "Continue.continue",
        "esbenp.prettier-vscode",
        "ms-python.vscode-pylance",
        "ms-python.vscode-python-envs",
        "ms-playwright.playwright"
      ]
    }
  }
}
